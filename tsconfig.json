{
    "include": [
        "src/**/*",
        "serverConfig.js"
    ],
    "compilerOptions": {
        "allowJs": true,
        "checkJs": false,
        "strict": true,
        "target": "es2019",
        "lib": [
            "es2020"
        ],
        "moduleResolution": "Node",
        "module": "commonjs",
        "outDir": "dist",
        "allowSyntheticDefaultImports": true,
        "declaration": false,
        "sourceMap": true,
        "esModuleInterop": true,
    }
}